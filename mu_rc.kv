<Musicrec>:
    MDLabel:
        text: 'Music Recommendation'
        pos_hint: {'center_x': 0.9,'center_y': 0.9}
        font_name: 'SamsungSans-Bold.ttf'
        color:(0,1,0.5,1)
    MDTextField:
        id: age
        max_text_length: 2
        size_hint_x: None
        width: "240dp"
        mode:"rectangle"
        hint_text: "AGE"
        pos_hint: {'center_x': 0.5,'center_y': 0.7}
    MDTextField:
        id: gender
        mode:"rectangle"
        max_text_length: 1
        hint_text: "GENDER"
        size_hint_x: None
        width: "240dp"
        helper_text: "0-F/1-M"
        helper_text_mode:"on_focus"
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
    MDRectangleFlatIconButton:
        icon:"magnify"
        text: 'Recommend'
        pos_hint: {'center_x': 0.5, 'y': 0.3} 
        on_press: root.recommend()
    MDLabel:
        id: prediction
        text: ''
        pos_hint: {'center_x': .95,'center_y': 0.2}
        font_name: 'SamsungSans-Bold.ttf'
        color:(0,1,0.5,1)